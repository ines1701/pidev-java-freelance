<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterGroupe">

    <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

        <Label style="-fx-font-size: 18px;" text="Ajouter un Groupe" />

        <HBox alignment="CENTER" spacing="10">
            <Label text="Nom :" />
            <TextField fx:id="nomTextField" />
            <Label fx:id="nomErrorLabel" prefHeight="18.0" prefWidth="272.0" style="-fx-text-fill: red;" text="" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Label text="Groupe :" />
            <TextField fx:id="groupeTextField" />
            <Label fx:id="groupeErrorLabel" prefHeight="18.0" prefWidth="281.0" style="-fx-text-fill: red;" text="" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Label text="Description :" />
            <TextField fx:id="descriptionTextField" prefHeight="26.0" prefWidth="310.0" />
            <Label fx:id="descriptionErrorLabel" prefHeight="18.0" prefWidth="142.0" style="-fx-text-fill: red;" text="" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Label text="Image URL :" />
            <TextField fx:id="imageTextField" />
            <Label fx:id="imageErrorLabel" prefHeight="18.0" prefWidth="222.0" style="-fx-text-fill: red;" text="" />
   
           <Button onAction="#uploadImage" prefHeight="15.0" prefWidth="66.0" text="Uploader Image" />
        </HBox>
    </VBox>
     <Button layoutX="231.0" layoutY="237.0" onAction="#ajouterGroupe" text="Ajouter" />
   <Button fx:id="gotoaffichage" layoutY="1.0" mnemonicParsing="false" onAction="#gotoaffiche" text="&lt;" />

</AnchorPane>
